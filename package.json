{
  "name": "stencil-storybook-boilerplate",
  "version": "0.0.0",
  "private": true,
  "description": "Stencil Storybook Boilerplate",
  "license": "MIT",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "es2015": "dist/esm/index.js",
  "es2017": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "scripts": {
    "watch": "run-p watch:stencil watch:storybook",
    "watch:stencil": "stencil build --prod --watch --serve",
    "watch:storybook": "start-storybook -p 6006",
    "lint": "eslint src/**/*{.ts,.tsx}",
    "stylelint": "stylelint '**/*.scss' --allow-empty-input",
    "test": "stencil test --spec --e2e --coverage",
    "build:storybook": "build-storybook",
    "build:stencil": "stencil build --docs",
    "predeploy": "yarn build:stencil && yarn build:storybook",
    "deploy": "gh-pages -d storybook-static"
  },
  "dependencies": {
    "@stencil/core": "2.3.0"
  },
  "devDependencies": {
    "@babel/core": "7.12.3",
    "@stencil/eslint-plugin": "0.3.1",
    "@stencil/sass": "1.3.2",
    "@storybook/addon-actions": "6.0.28",
    "@storybook/addon-essentials": "6.0.28",
    "@storybook/addon-links": "6.0.28",
    "@storybook/addon-notes": "5.3.21",
    "@storybook/web-components": "6.0.28",
    "@types/jest": "26.0.15",
    "@types/node": "14.14.7",
    "@types/puppeteer": "5.4.0",
    "@typescript-eslint/eslint-plugin": "4.7.0",
    "@typescript-eslint/parser": "4.7.0",
    "babel-loader": "8.2.1",
    "copy-webpack-plugin": "6.3.1",
    "eslint": "7.13.0",
    "eslint-config-airbnb-typescript": "12.0.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.21.5",
    "gh-pages": "3.1.0",
    "husky": "4.3.0",
    "jest": "26.6.3",
    "jest-cli": "26.6.3",
    "lit-html": "1.3.0",
    "npm-run-all": "4.1.5",
    "puppeteer": "5.4.1",
    "react-is": "17.0.1",
    "stylelint": "13.7.2",
    "stylelint-config-sass-guidelines": "7.1.0",
    "typescript": "4.0.5",
    "write-file-webpack-plugin": "4.5.1"
  },
  "jest": {
    "preset": "@stencil/core/testing"
  },
  "stylelint": {
    "extends": "stylelint-config-sass-guidelines"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn stylelint && yarn test"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}

{
  "name": "stencil-storybook-boilerplate",
  "version": "0.0.0",
  "private": true,
  "description": "Stencil Storybook Boilerplate",
  "license": "MIT",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "es2015": "dist/esm/index.js",
  "es2017": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "scripts": {
    "watch": "run-p watch:stencil watch:storybook",
    "watch:stencil": "stencil build --prod --watch --serve",
    "watch:storybook": "start-storybook -p 6006",
    "lint": "eslint src/**/*{.ts,.tsx}",
    "stylelint": "stylelint '**/*.scss' --allow-empty-input",
    "test": "stencil test --spec --e2e --coverage",
    "build:storybook": "build-storybook",
    "build:stencil": "stencil build --docs",
    "predeploy": "yarn build:stencil && yarn build:storybook",
    "deploy": "gh-pages -d storybook-static"
  },
  "dependencies": {
    "@stencil/core": "2.12.1"
  },
  "devDependencies": {
    "@babel/core": "7.16.10",
    "@stencil/eslint-plugin": "0.4.0",
    "@stencil/sass": "1.5.2",
    "@storybook/addon-actions": "6.4.13",
    "@storybook/addon-essentials": "6.4.13",
    "@storybook/addon-links": "6.4.13",
    "@storybook/addon-notes": "5.3.21",
    "@storybook/web-components": "6.4.13",
    "@types/jest": "27.4.0",
    "@types/node": "16.11.21",
    "@types/puppeteer": "5.4.4",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "babel-loader": "8.2.3",
    "copy-webpack-plugin": "10.2.1",
    "eslint": "7.32.0",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-react": "7.28.0",
    "gh-pages": "3.2.3",
    "husky": "7.0.4",
    "jest": "26.6.3",
    "jest-cli": "26.6.3",
    "lit-html": "2.1.1",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.5",
    "puppeteer": "13.1.1",
    "react-is": "17.0.2",
    "stylelint": "14.2.0",
    "stylelint-config-sass-guidelines": "9.0.1",
    "typescript": "4.5.5",
    "write-file-webpack-plugin": "4.5.1"
  },
  "jest": {
    "preset": "@stencil/core/testing"
  },
  "stylelint": {
    "extends": "stylelint-config-sass-guidelines"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn stylelint && yarn test"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
